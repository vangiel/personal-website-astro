---
import Bento from "@/components/Bento.astro";
import Waves from "@/images/home/waves.astro";
---

<section class="experience">
	<h2 class="section__title">Experience and skills</h2>
	<Bento />
	<Waves
		className="waves"
		colorTop="oklch(var(--clr-background)/0.2)"
		colorMid="oklch(var(--clr-background)/0.6)"
		colorBottom="oklch(var(--clr-background))"
	/>
</section>

<style>
	.experience {
		padding-block-start: var(--navbar-height);
		scroll-padding-top: 0;
		min-height: 100dvh;
		background: oklch(var(--clr-primary));
		position: relative;

		:global(.waves) {
			z-index: 2;
		}
	}
</style>
