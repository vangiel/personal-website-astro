---
import Layout from "@/layouts/Layout.astro";

import Education from "@/sections/home/Education.astro";
import Experience from "@/sections/home/Experience.astro";
import Header from "@/sections/home/Header.astro";
import Projects from "@/sections/home/Projects.astro";
---

<Layout title="Home">
	<Header />
	<main>
		<Projects />
		<Experience />
		<Education />
	</main>
</Layout>

<style>
	:global(h2.section__title) {
		font-size: var(--fs-700);
		font-weight: var(--fw-bold);
		text-align: center;
	}

	:global(.waves) {
		position: absolute;
		bottom: 0;
		left: 0;
		width: 100%;
		max-height: 50%;
		z-index: -1;
	}
</style>
